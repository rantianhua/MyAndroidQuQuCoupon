<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="2dip" >

    <ImageView
        android:id="@+id/pic_listItemInMyCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image_listItem_content"
        android:padding="10dp" />

    <TextView
        android:id="@+id/shopName_myCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pic_listItemInMyCoupon"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:textStyle="italic|bold" />

    <LinearLayout
        android:id="@+id/belowshopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pic_listItemInMyCoupon"
        android:layout_below="@id/shopName_myCoupon"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/couponPrice_myCoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fe0212"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/originalPrice_myCoupon"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dip"
            android:background="@drawable/originalprice_del"
            android:textSize="14sp"
            android:textStyle="italic" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/textView_timeInMyCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pic_listItemInMyCoupon"
        android:layout_below="@+id/belowshopName"
        android:layout_marginTop="20dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="6pt" />
    
</RelativeLayout>